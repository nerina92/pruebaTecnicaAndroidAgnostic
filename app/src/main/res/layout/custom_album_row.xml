<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/textSize_1"
        android:paddingStart="@dimen/textSize_1"
        android:textSize="@dimen/textSize_1"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TITLE"
        android:paddingStart="@dimen/dobleTextSize_1"
        android:paddingEnd="@dimen/dobleTextSize_1"
        android:paddingTop="@dimen/textSize_1"
        android:paddingBottom="@dimen/mitadTextSize_1"
        android:textSize="@dimen/dobleTextSize_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_id"
        android:textColor="@color/greenTitle"
        />

</androidx.constraintlayout.widget.ConstraintLayout>